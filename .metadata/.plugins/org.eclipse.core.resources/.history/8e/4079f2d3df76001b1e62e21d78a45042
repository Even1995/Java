import java.util.Scanner;

public class exerc5 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int cod = sc.nextInt();
		int qnt = sc.nextInt();
		double total = cod * qnt;
		
		if(cod == 1) {
			cod = (int) 4.00;
		}
		else if (cod == 2) {
			cod = (int) 4.50;
		}
		else if (cod == 3) {
			cod = (int) 5.00;
		}
		else if (cod == 4) {
			cod = (int) 2.00;
		}
		else {
			cod = (int) 1.50;
		}
		System.out.println("Total: R$ %.2f%n "+ total );
		sc.close();

	}

}
